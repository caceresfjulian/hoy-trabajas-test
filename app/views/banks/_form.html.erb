<div class="flex-column pt-5">
  <div class="card shadow" style="width: 36rem; margin: 0 auto">
    <div class="card-header">
      <h2 class="text-center"><%= title %></h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:messages]%>
        <% flash[:messages].each do |message|%>
          <p class="text-danger"><%= message%></p>
        <% end %> 
      <% end %>
      <!-- Form -->
      <%= form_with model: @bank do |f| %>
        <%= f.label :name, "Bank Name :", class:"mt-3" %>
        <%= f.text_field :name ,placeholder: "Enter Bank's Name",class:"mb-2 form-control" %>
        <br>
        <%= f.submit "Save Bank", class:"btn-primary border-0 rounded-pill p-3" %>
      <% end %>
    </div>
  </div>
</div>