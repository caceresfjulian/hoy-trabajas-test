<div class="flex-column justify-content-center pt-5">
  <div class="card shadow" style="width: 36rem; margin: 0 auto;">
    <div class="card-header">
      <h2 class="text-center">Bank Form</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form -->
      <%= form_with model: @bank do |f| %>
        <%= f.label :name, "Bank Name :", class:"mt-3" %>
        <%= f.text_field :name ,placeholder: "Enter Bank's Name",class:"mb-2 form-control" %>
        <br>
        <%= f.submit "Save Bank", class:"btn-primary border-0 rounded-pill py-1 px-3" %>
      <% end %>
    </div>
  </div>
</div>